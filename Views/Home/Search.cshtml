@model List<ClassifiedAds.Models.AdDetail>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MyLayoutPro.cshtml";
}

  <div class="center_content">

<h2>Search Result</h2>

@foreach(var p in Model)
{
    <img src="~/Images/@p.Image_path" />
    <label>Title</label><h3>@p.AdTitle </h3>
    <label>Type:</label><h3><p>@p.AdType</p></h3>
    <label>Stauts</label><h3><p>@p.Status</p></h3>
    <label>Price:</label><h3><p>@p.Price</p></h3>
    <label>Quantity:</label><h3><p>@p.Quantity</p></h3>
     
}
    </div>
