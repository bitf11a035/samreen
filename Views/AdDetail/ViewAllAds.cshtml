@model ClassifiedAds.Models.AdDetail
@{
    ViewBag.Title = "ViewAllAds";
    Layout = "~/Views/Shared/_MyLayoutPro.cshtml";
}

<div class="center_content">

@foreach(var x in ViewBag.X)
    {
    
                    <figure class="img-indent" ><img src="~/Images/@x.Image_path" alt="" width="10%" height="10%"/>
                                            <div class="extra-wrap" >
                                            	<h3>@x.AdTitle</h3>
                                                 <p class="p1">AdType: @x.AdType</p>
                                                <p class="p1">Status: @x.Status</p>
                                                <p class="p1">Price: Rs: @x.Price</p>
                                                 <p class="p1">Quantity: @x.Quantity</p>
                                              
                                                
                                            </div>
                                                </figure>
    }

    @Html.ActionLink("Go Back To Menu ","Index","Admin")

    </div>